<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.e_sampark.GovernmentLogin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="31dp"
        android:text="Choose One Sector"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold|italic" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="70dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Health Sector" />

        <RadioButton android:id="@+id/radio_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education Sector"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Sector"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <EditText
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Enter Your Authorized Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@android:color/holo_orange_light"
        android:elevation="1dp"
        android:fadingEdge="horizontal|vertical"
        android:onClick="login"
        android:text="Login" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="67dp"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:onClick="dm"
        android:text="I'm The DM"
        android:textColor="@android:color/holo_orange_dark" />

</RelativeLayout>
</ScrollView>
